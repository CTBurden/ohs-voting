generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Player {
  id          Int      @id @default(autoincrement())
  first_name  String
  last_name   String
  ranking     String
  division    Division @relation(fields: [division_id], references: [id], onDelete: Cascade)
  division_id Int

  @@index([division_id])
}

model Division {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  players     Player[]
}
